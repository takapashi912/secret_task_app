<div class="max-w-md md:max-w-lg lg:max-w-xl mx-auto bg-gray-50 rounded-xl shadow p-6 mt-2">
  <%= form_with model: @task, local: true do |f| %>
    <%= render "shared/error_messages", object: f.object %>
    <div class="mb-4">
      <%= f.label :title, "タイトル", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.text_field :title, class: "w-full border rounded px-3 py-2" %>
    </div>

    <div class="mb-4">
      <%= f.label :due_at, "期限", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.datetime_local_field :due_at, class: "w-full border rounded px-3 py-2" %>
    </div>

    <div class="mb-6">
      <%= f.label :question_template_id, "テンプレ（任意）", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.collection_select :question_template_id,
                              QuestionTemplate.all, :id, :body,
                              { include_blank: "選択しない" },
                              { class: "w-full border rounded px-3 py-2" } %>
    </div>

    <div class="mb-6">
      <%= f.label :secret_content, "タスクをサボったときに公開される秘密", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <p class="text-xs text-gray-500 mb-1">
        ※ MVPではゆるい内容だけにしてください（例：学生時代のちょっとした黒歴史など）
      </p>
      <%= f.text_area :secret_content,
          rows: 4,
          class: "w-full border rounded px-3 py-2" %>
    </div>

    <div class="flex justify-center">
      <%= f.submit nil, class: "px-4 py-2 bg-indigo-600 text-white rounded hover:bg-indigo-700" %>
    </div>
  <% end %>
</div>
