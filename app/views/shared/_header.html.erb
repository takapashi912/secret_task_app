<div class="bg-white shadow-sm">
  <div class="max-w-6xl mx-auto px-4 py-3 flex justify-between items-center">
    <%= link_to "Secret Task", root_path, class: "text-xl font-semibold text-indigo-600" %>

    <nav class="flex items-center gap-4 text-sm">
      <% if user_signed_in? %>
        <span class="text-gray-700">
          <%= current_user.name.presence || current_user.email %> さん
        </span>
        <%= link_to "タスク一覧", "#", class: "text-gray-700 hover:text-indigo-600" %>
        <%= link_to "タスク作成", "#", class: "text-gray-700 hover:text-indigo-600" %>
        <%= button_to "ログアウト",
                destroy_user_session_path,
                method: :delete,
                class: "text-gray-700 hover:text-indigo-600" %>
      <% else %>
        <%= link_to "ログイン",
                new_user_session_path,
                class: "px-3 py-1 border border-indigo-600 text-indigo-600 rounded hover:bg-indigo-50" %>
        <%= link_to "登録",
                new_user_registration_path,
                class: "px-3 py-1 bg-indigo-600 text-white rounded hover:bg-indigo-700" %>
      <% end %>
    </nav>

  </div>
</div>